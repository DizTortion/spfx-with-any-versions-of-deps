{
    "compilerOptions": {
        "module": "esnext",
        "target": "es5",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "rootDir": "src",
        "noEmitOnError": true,
        "jsx": "react",
        "forceConsistentCasingInFileNames": true
    },
    "typeRoots": [
        "./node_modules/@types",
        "./node_modules/@microsoft"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "lib": [
        "es5",
        "dom",
        "es2015.collection"
    ]
}